<h2>Jobs in <%= @category.name %></h2>
<br>
    <% @jobs.each do |job| %>
    <div class="row">
      <div class="col-md-10">
        <h4><%= job.title %></h4>
        <p> <%= job.description %> </p>
      </div>
      <div class="col-md-2">
        <p><%= link_to "View details", job_path(job), class: "btn btn-secondary" %>
        </p>
      </div>
    </div>
    <hr>
    <% end %>